/* pages/images/images.wxss */
.message {
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}
.message image {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  border-radius: 8rpx;
  opacity: 0.3;
}
.work-content .name {
  display: block;
  font-size: 32rpx;
  margin: 20rpx 0 10rpx;
  color: #158bb8;
  font-weight: 700;
}

/* 图片区域 */
.image-page {
  padding: 130rpx 20rpx 80rpx;
  box-sizing: border-box;
  overflow-y: scroll;
  display: flex;
  align-items: flex-start;
}
.column {
  width: 50%;
}
.column_item {
  width: 340rpx;
  min-height: 100rpx;
  background: #fff;
  margin: 20rpx auto;
  box-shadow: 5rpx 5rpx 10rpx 0 rgba(0, 0, 0, 0.3);
  position: relative;
}
.column_pic {
  display: block;
  width: 340rpx;
  height: 340rpx;
}
.select-btn {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  /* background-color: rgba(0, 0, 0, 0.1); */
  color: rgba(0, 0, 0, 0.1);
  text-align: center;
  line-height: 60rpx;
  cursor: pointer;
  /* color: rgba(255, 255, 255, 0.25); */
  background-color: rgba(255, 255, 255, 0.25);
}
.select-btn.selected {
  color: #07c160;
}

/* no-data */
.no-data {
  height: 100%;
  text-align: center;
  color: #666;
  font-size: 24rpx;
}
.no-data image {
  display: block;
  margin: 0 auto;
  transform-origin: center center;
  transform: scale(0.7);
}


/* bottom */
.select-part {
  position: fixed;
  height: 80rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5)
}
.select-content {
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.select-content .content-text {
  color: #ccc;
  display: flex;
  align-items: center;
}
.content-text text {
  display: inline-block;
  min-width: 40rpx;
  text-align: center;
}
text.select-number {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 700;
}
text.check-all {
  margin-left: 20rpx;
}
.content-text .select-btn {
  position: inherit;
  background-color: rgba(255, 255, 255, 0.8);
}

.content-btn text {
  display: inline-block;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-left: 20rpx;
  background-color: #ffffff;
  border-radius: 6rpx;
  cursor: pointer;
}
.content-btn .submit {
  background-color: #1AAD19;
  color: #ffffff;
}


.hide {
  display: none;
}