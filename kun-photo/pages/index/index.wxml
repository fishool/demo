<!--index.wxml-->
<view class="container">
  <swiper
    indicator-dots="true"
    circular="true"
    autoplay="true"
    interval="2500"
    duration="500"
    indicator-color="rgba(255, 255, 255, 0.35)"
    indicator-active-color="rgba(255, 255, 255, 0.9)"
  >
    <block wx:for="{{background}}" wx:key="*this">
      <swiper-item>
        <view class="swiper-item {{item}}">
          <image mode="aspectFill" src="{{item.src}}"></image>
        </view>
      </swiper-item>
    </block>
  </swiper>
  <view class="message">
    <view class="address">
      <text>吉安市吉州区禾埠街道井冈山大道吉安市商会大厦122号</text>
    </view>
    <view>
      <text class="iconfont icon-location_1" bindtap="openLocation"></text>
      <text class="iconfont icon-phone" bindtap="download"></text>
    </view>
  </view>
</view>
