/* swiper */
swiper {
  height: 400rpx;
}
.swiper-item {
  height: 100%;
  width: 100%;
  background-color: #158bb8;
}
.swiper-item image {
  object-fit: cover;
  width: 100%;
  height: 100%;
}
/* message */
.message {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}
.message text.iconfont {
  display: inline-block;
  color: #158bb8;
  cursor: pointer;
  font-size: 50rpx;
  /* margin-left: 20rpx; */
  padding: 0 8px;
}
.message .address {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* no-data */
.nodata {
  height: calc(100vh - 480rpx);
  text-align: center;
  color: #666;
  font-size: 24rpx;
}
.nodata image {
  display: block;
  margin: 0 auto;
  transform-origin: center center;
  transform: scale(0.7);
}
/* works */
.works {
  height: calc(100vh - 480rpx);
  padding: 20rpx;
  overflow-y: scroll;
  overflow-x: hidden;
  box-sizing: border-box;
}
.work-item {
  height: 120rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.work-item::after {
  content: " ";
  position: absolute;
  right: 40rpx;
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #158bb8;
  border-right: 4rpx solid #158bb8;
  transform: rotate(45deg);
}
.work-item image {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  border-radius: 8rpx;
  opacity: 0.2;
}

.work-content .name {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: #158bb8;
  font-weight: 700;
}

.no-more {
  text-align: center;
  font-size: 20rpx;
  color: #999999;
}
